<h2>Cambia tu contraseña</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="field">
    <%= f.label :password, "Nueva contraseña", class:'form-label' %><br />
    <% if @minimum_password_length %>
      <em>(Minimo <%= @minimum_password_length %> caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'form-control w-25' %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirma la contraseña", class:'form-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control w-25' %>
  </div>
  <div class="actions">
    <%= f.submit "Aceptar", class: "btn btn-primary mt-2" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
